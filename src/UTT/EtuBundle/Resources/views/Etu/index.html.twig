{% extends "UTTEtuBundle::layout.html.twig" %}

{% block stylesheets %}
    {# On charge le CSS de bootstrap depuis le site directement #}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/listeEtu.css') }}"/>

{% endblock %}
{% block topbody %}
    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-offset-10">
                <form enctype="multipart/form-data" action="{{ path('utt_csv_upload') }}" method="POST" id="formImport">
                    {{ include("UTTCoreBundle:Core:boutonImport.html.twig") }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}
{% block etu_body %}
        <div class="row labelTable">
            <h2>Liste Etudiants</h2>
        </div>
        <div class="row">
            <table class="table table-striped table-hover" id="tableEtudiant">
                <tr>
                    <th>Nom</th>
                    <th>Prenom</th>
                    <th>Admission</th>
                    <th>Filliere</th>
                </tr>
                {% for etudiant in etudiants %}
                    <tr class="lineEtu"><td class="idLineEtu">{{ etudiant.idetudiant }}</td><td>{{ etudiant.nom }}</td><td>{{ etudiant.prenom }}</td><td>{{ etudiant.admission.nom }}</td><td>{{ etudiant.filliere.nom }}</td></tr>
                    {% endfor %}
            </table>
        </div>



{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset("js/listeEtu.js") }}"></script>
{% endblock %}